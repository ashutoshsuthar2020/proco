# API Configuration
APP_NAME=Document Summarizer API
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/doc_summarizer
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=documents
QDRANT_API_KEY=
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.8
MAX_SIMILAR_DOCUMENTS=5

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS_PER_REQUEST=4000
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Processing Configuration
MAX_DOCUMENT_SIZE=52428800  # 50MB
ASYNC_TASK_TIMEOUT=300

# Long-term Memory Configuration
ENABLE_MEMORY=true
MEMORY_SIMILARITY_BOOST=0.1
MEMORY_CONTEXT_WINDOW=3

# Logging
LOG_LEVEL=INFO